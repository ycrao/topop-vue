{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "components.d.ts", "src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
